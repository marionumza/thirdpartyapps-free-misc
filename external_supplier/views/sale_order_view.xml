<odoo>
    <data>
        <record id="view_order_form_supplier" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <button name="action_quotation_send" position="before">
                    <button class="oe_highlight" name="action_sync_price_and_stock" type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"
                            string="Sync price and stock from supplier"/>
                </button>
                <xpath expr="//field[@name='order_line']/form/group/group/field[@name='price_unit']" position="after">
                    <field name="external_supplier_id"/>
                    <field name="stock_supplier"/>
                    <field name="price_and_stock_state" invisible='True'/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="external_supplier_id"/>
                    <field name="stock_supplier"/>
                    <field name="price_and_stock_state" invisible='True'/>
                </xpath>
                <tree position="attributes">
                    <attribute name="decoration-danger">price_and_stock_state=='price_increased'</attribute>
                    <attribute name="decoration-success">price_and_stock_state=='price_decreased'</attribute>
                    <attribute name="decoration-info">price_and_stock_state=='out_of_stock'</attribute>
                </tree>
            </field>
        </record>
    </data>
</odoo>
