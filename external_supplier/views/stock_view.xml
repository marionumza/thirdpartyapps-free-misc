<odoo>
    <data>
        <record id="view_picking_form_inh" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <button name="button_validate" position="before">
                    <field name="external_supplier_id" invisible="1" />
                    <button class="oe_highlight" name="action_update_status" string="Update status" type="object"
                            attrs="{'invisible': ['|', '|', ('origin', '=', False), ('external_supplier_id', '=', False), '|', ('state', '=', 'done'), ('state', '=', 'cancel')]}"/>
                </button>
                <xpath expr="//page[3]" position="after">
                    <page string="Order history">
                        <field name="history_line">
                            <tree string="Order history">
                                <field name="update_date"/>
                                <field name="description"/>
                                <field name="expected_date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
