<odoo>
    <record id="ir_cron_external_supplier_sync_products" model="ir.cron">
        <field name="name">External supplier: sync products</field>
        <field name="model_id" ref="model_external_supplier"/>
        <field name="state">code</field>
        <field name="code">model.cron_sync_products()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(datetime.now() + relativedelta(days=1, hour=2, minutes=0, seconds=0)).strftime('%Y-%m-%d %H:%M:%S')"/>
    </record>
</odoo>
