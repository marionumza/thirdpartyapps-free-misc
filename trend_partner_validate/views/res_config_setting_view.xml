<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="res_config_settings_view_form_validation_inherit">
            <field name="name">res.config.settings.view.form.partner.validation</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='user_default_rights']" position="after">
                    <div id="partner_validation">
                        <h2>Partners Validation</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box" id="apply_mobile_validation">
                                <div class="o_setting_left_pane">
                                    <field name="apply_mobile_validation"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="apply_mobile_validation"/>
                                    <div class="text-muted">
                                        validation for mobile and phone fields in partner form.
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6 o_setting_box" id="apply_mobile_validation">
                                <div class="o_setting_left_pane">
                                    <field name="apply_email_validation"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="apply_email_validation"/>
                                    <div class="text-muted">
                                        validation for email field in partner form.
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6 o_setting_box" id="apply_mobile_validation">
                                <div class="o_setting_left_pane">
                                    <field name="apply_tax_validation"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="apply_tax_validation"/>
                                    <div class="text-muted">
                                        validation for Tax ID and Company Register fields in partner form.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>