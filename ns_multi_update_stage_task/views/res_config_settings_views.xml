<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.project.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="50"/>
            <field name="inherit_id" ref="project.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('app_settings_block')]/div[@id='tasks_management']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="group_accept_not_same_stage">
                        <div class="o_setting_left_pane">
                            <field name="group_accept_not_same_stage"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_accept_not_same_stage"/>
                            <div class="text-muted">
                                Authorize multi-update of stage of task for the task not in the same stage
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
