        <xpath expr="//CashMoveButton" position="replace">

        </xpath>

        <xpath expr="//TicketButton" position="replace">
                <div class="dropdown">
                    <PosMenu isPosMenuShown="isPosMenuShown" />
                    <div class="dropdown-content" t-if="isPosMenuShown">
                        <ul t-if="isPosMenuShown" class="options" >
                            <li >
                                <CashMoveButton t-if="showCashMoveButton()" />
                            </li>
                            <li >
                                <TicketButton isTicketScreenShown="isTicketScreenShown" />
                            </li>
                        </ul>
                    </div>
                </div>
        </xpath>
        <xpath expr="//CashMoveButton[@t-if='showCashMoveButton() and env.isMobile and !state.mobileSearchBarIsShown']" position="replace">

        </xpath>
        <xpath expr="//TicketButton[@t-if='env.isMobile and !state.mobileSearchBarIsShown']" position="replace">
                <div class="dropdown" t-if='env.isMobile and !state.mobileSearchBarIsShown'>
                    <PosMenu isPosMenuShown="isPosMenuShown" />
                    <div class="dropdown-content" t-if="isPosMenuShown" style="position: fixed;">
                        <ul t-if="isPosMenuShown" class="options" >
                            <li >
                                <CashMoveButton t-if="showCashMoveButton() and env.isMobile and !state.mobileSearchBarIsShown" />
                            </li>
                            <li >
                                <TicketButton isTicketScreenShown="isTicketScreenShown" t-if="env.isMobile and !state.mobileSearchBarIsShown"/>
                            </li>
                        </ul>
                    </div>
                </div>
        </xpath>
    </t>
