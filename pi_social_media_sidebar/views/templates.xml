<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="pi_layout_social" inherit_id="website.layout">
        <xpath expr="//div[@id='wrapwrap']" position="inside">
            <div class="s-media">
                <a t-if="website.social_twitter" t-att-href="website.social_twitter" target="_blank" class="s-item twitter">
                    <span class="fa fa-twitter"/>
                </a>
                <a t-if="website.social_facebook" t-att-href="website.social_facebook" target="_blank" class="s-item facebook">
                    <span class="fa fa-facebook"/>
                </a>
                <a t-if="website.social_github" t-att-href="website.social_github" target="_blank" class="s-item github">
                    <span class="fa fa-github"/>
                </a>
                <a t-if="website.social_linkedin" t-att-href="website.social_linkedin" target="_blank" class="s-item linkedin">
                    <span class="fa fa-linkedin"/>
                </a>
                <a t-if="website.social_youtube" t-att-href="website.social_youtube" target="_blank" class="s-item youtube">
                    <span class="fa fa-youtube"/>
                </a>
                <a t-if="website.social_instagram" t-att-href="website.social_instagram" target="_blank" class="s-item instagram">
                    <span class="fa fa-instagram"/>
                </a>
                
                <a id="sm-close" class="s-item print">
                    <span class="fa fa-arrow-left"/>
                </a>
            </div>
            <a id="sm-open" class="s-item print sm-collapse" style="left: -60px;">
                <span class="fa fa-arrow-right"/>
            </a>
        </xpath>
    </template>
</odoo>

