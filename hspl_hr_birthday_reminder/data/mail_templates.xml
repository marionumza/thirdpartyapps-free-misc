            <field name="email_from">${user.email|safe}</field>
            <field name="email_to">${object.work_email|safe}</field>
            <field name="model_id" ref="hr.model_hr_employee" />
            <field name="auto_delete" eval="True" />
            <field
                name="body_html"
            ><![CDATA[
                <p>Dear <b>${object.name}</b> ðŸ¥³,</p>
                <p>On behalf of the entire <b>${user.company_id.name}</b>, We wish you a very happy birthday ðŸŽ‚ and
                    sending you our best wishes for much happiness in your life ðŸŽ‰.</p>
                <p>Have a best one!</p>
