<?xml version="1.0"?>
<odoo>
    <data>
        <record id="mail_channel_view_form_inherit_chat_favourites" model="ir.ui.view">
            <field name="name">mail.channel.view.form.inherit.chat.favourites</field>
            <field name="model">mail.channel</field>
            <field name="inherit_id" ref="mail.mail_channel_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="after">
                    <field name="is_favourite" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
