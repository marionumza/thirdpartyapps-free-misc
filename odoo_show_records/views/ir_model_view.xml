<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_model_form" model="ir.ui.view">
            <field name="name">ir.model.view</field>
            <field name="model">ir.model</field>
            <field name="inherit_id" ref="base.view_model_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name=%(base.act_menu_create)d]" position="after">
                    <button icon="fa-align-justify" name="action_show_records" string="Show Records" type="object" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>