<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_public_category_form_view_inherit_droggol_theme_common" model="ir.ui.view">
        <field name="name">product.public.category.form.inherit.droggol.theme.common</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website_id']" position="after">
                <field name="dr_category_label_id"></field>
                <field name="dr_category_cover_image" class="oe_avatar" widget="image"></field>
                <field name="dr_category_icon" class="oe_avatar" widget="image"></field>
                <field name="dr_search_formulate" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>

</odoo>
