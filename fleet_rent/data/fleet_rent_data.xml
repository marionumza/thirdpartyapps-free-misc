<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- This template is use for the send vehicle rent remainder -->
    <record id="email_rent_remainder_template" model="mail.template">
        <field name="name">Fleet Vehicle Rent Remainder Template</field>
        <field name="subject">Fleet Vehicle Rent Remainder Template</field>
        <field name="email_from">{{ object.fleet_rent_id.company_id and object.fleet_rent_id.company_id.email or user.partner_id and user.partner_id.email or ''}}</field>
        <field name="email_to">{{object.fleet_rent_id.tenant_id and object.fleet_rent_id.tenant_id.email or ''}}</field>
        <field name="model_id" ref="model_tenancy_rent_schedule"/>
        <field name="auto_delete" eval="False"/>
        <field name="body_html" type="html">
            <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                <p>Hello <t t-out="object.fleet_rent_id.tenant_id.name or ''"/></p>
                <p>
                    We remind you that your rental vehicle <t t-out="object.vehicle_id.name or ''"/>rent end date is expired as of date <t t-out="object.start_date or ''"/>. Requesting you to pay the rent as soon as possible.
                </p>
                <div style="width: 347px; margin: 0px; padding: 5px 14px; line-height: 16px; background-color: #F2F2F2;">
                    <span style="color: #222; margin-bottom: 5px; display: block;">
                        <p>Thank you,</p>
                        <p>Regards,</p>
                        <p>
                            <t t-out="object.fleet_rent_id.company_id.name or ''"/>
                        </p>
                    </span>
                </div>
            </div>
        </field>
    </record>
</odoo>
