<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="res_company_whatsapp_product_inquiry_base_view" model="ir.ui.view">
            <field name="name">res.company.whatsapp.product.inquiry.base.view</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page" position="after">
                    <page string="Whatsapp Product Inquiry">
                        <group string="Configuration">
                            <field name="website_whatsapp_number" placeholder="910123456789"/>
                            <field name="whatsapp_message"/>
                            <field name="whatsapp_button_name"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
