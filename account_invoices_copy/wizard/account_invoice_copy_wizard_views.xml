<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_invoice_copy_view_copy_form" model="ir.ui.view">
        <field name="name">account.invoice.wizard.copy.form</field>
        <field name="model">account.invoice.wizard.copy</field>
        <field name="arch" type="xml">
            <form string="Invoices copy, select new date invoices">
                <group string="New invoices date" col="4">
                    <field name="new_date_invoice" colspan="4"/>
                    <field name="new_date_due" colspan="4"/>
                </group>
                <footer>
                    <button name="create_invoices" type="object" string="Create Invoices" class="btn-primary"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>