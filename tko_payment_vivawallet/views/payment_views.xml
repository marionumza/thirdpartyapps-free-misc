<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_acquirer_form" model="ir.ui.view">
        <field name="name">PayUMoney Acquirer Form</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'vivawallet')]}">
                    <field name="vivawallet_client_id" attrs="{'required':[ ('provider', '=', 'vivawallet'), ('state', '!=', 'disabled')]}"/>
                    <field name="vivawallet_client_secret" attrs="{'required':[ ('provider', '=', 'vivawallet'), ('state', '!=', 'disabled')]}" password="True"/>
                    <field name="vivawallet_source_code" attrs="{'required':[ ('provider', '=', 'vivawallet'), ('state', '!=', 'disabled')]}" password="True"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
